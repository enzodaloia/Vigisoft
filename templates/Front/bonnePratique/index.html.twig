{% extends 'base.html.twig' %}

{% block title %}Bonnes Pratiques - Vigisoft{% endblock %}

{% block body %}
    <div class="rounded-3 p-4 bg-primary-color" style="min-height: 95vh;">
        <div class="container">
            <!-- Bouton Ajouter une contribution -->
            <div class="d-flex justify-content-end mb-4">
                <a href="{{ path('app_front_contribution_new') }}" class="btn btn-secondary-color">
                    <i class="fa fa-plus"></i>
                </a>
            </div>

            <!-- Cartes des bonnes pratiques -->
            <div class="row justify-content-center gx-4 gy-4 bonne-pratique-cards">
                {% for bp in pagination %}
                    <div class="col-12 col-md-4">
                        <div class="card h-100 w-100">
                            <div class="card-header p-0 border-0">
                                <img src="{{ asset('ressources/imgContribution/' ~ bp.token ~ '.' ~ bp.file) }}" alt="Image de la bonne pratique" class="img-fluid rounded-top">
                            </div>
                            <div class="card-body text-center d-flex flex-column justify-content-between">
                                <h5 class="card-title">{{ bp.titre }}</h5>
                                <a href="{{path('app_front_bonne_pratique_show', {'token': bp.token})}}" class="btn btn-primary mt-3 w-100">Voir plus</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Pagination -->
            <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}